{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ms-manager",
  "version": "0.1.2",
  "identifier": "io.petitechose.midistudio.manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:14200",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "ms-manager",
        "width": 1024,
        "minWidth": 640,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "dmg",
      "deb",
      "rpm"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
