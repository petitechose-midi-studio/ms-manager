{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ms-manager",
  "version": "0.1.2",
  "identifier": "io.petitechose.midistudio.manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:14200",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "ms-manager",
        "width": 1024,
        "minWidth": 640,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "nsis",
      "dmg",
      "app",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJERDc1MkFBRUQzRTgzRUMKUldUc2d6N3RxbExYdlN0Z3lHak40b0V3ekxxZVovd3oxa0hTQVRBK1BhMDAvZENhSmt2Z1U0OHQK",
      "endpoints": [
        "https://github.com/petitechose-midi-studio/ms-manager/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
